<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="PrivacyPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>eu.threecixty.privacy.store.db.UserTable</class>
    <class>eu.threecixty.privacy.store.db.ValueTable</class>
    <properties>
      <property name="hibernate.connection.username"        value="${threecixty.property.test.data.user}"/>
      <property name="hibernate.connection.password"        value="${threecixty.property.test.data.pass}"/>
      <property name="hibernate.connection.url"             value="jdbc:derby://localhost/memory:${threecixty.property.test.data.db}"/>
      <property name="hibernate.connection.driver_class"    value="${threecixty.property.test.data.driver}"/>
      <property name="hibernate.dialect"                    value="${threecixty.property.test.data.dialect}"/>
      <property name="hibernate.show_sql"                   value="true"/>
      <property name="hibernate.cache.provider_class"       value="org.hibernate.cache.NoCacheProvider"/>     
    </properties>
  </persistence-unit>
</persistence>